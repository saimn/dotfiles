# -*- mode: Conf; -*-

[user]
   name = Simon
   email = contact@saimon.org
[core]
   editor = vim +0
   # autocrlf = input
   # safecrlf = true
[alias]
   addrm = add -u
   br = branch
   ci = commit
   co = checkout
   # cp = cherry-pick
   # fp = format-patch
   st = status
   unstage = reset HEAD --
   ignored = ls-files --others
   # log
   logv = log -p
   last = log --oneline -1 HEAD
   oneline = log --oneline --decorate --graph --all
   hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
   # summary of what you're going to pull/push
   incoming = "git fetch && git log ..origin/master"
   outgoing = log --oneline origin/master..HEAD
   # changes since we last did a push
   wo = whatchanged -p origin/master..HEAD
   # diff
   di = diff
   dic = diff --cached
   staged = diff --cached
   unstaged = diff
   wdiff = diff --color-words
   w  = whatchanged -p
   changes = diff --name-status -r
   #both = diff HEAD
   # info
   info = remote -v
   authors = "!git log --format='%aN <%aE>' | sort -u"
[diff]
   renames = true
[color]
   branch = auto
   diff = auto
   status = auto
   interactive = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = yellow
   changed = green
   untracked = cyan
[merge]
   tool = gvimdiff3
   stat = true
[rebase]
   stat = true
[branch]
   autosetupmerge = true
   autosetuprebase = always
[push]
   default = current
[github]
   user = saimn

[mergetool "gvimdiff3"]
	cmd = gvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
