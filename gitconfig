[alias]
   addrm = add -u
   br = branch
   ci = commit
   co = checkout
   # cp = cherry-pick
   # fp = format-patch
   st = status
   unstage = reset HEAD --
   ignored = ls-files --others
   # log
   logv = log -p
   last = log --oneline -1 HEAD
   oneline = log --oneline --decorate
   out = log --oneline origin/master..HEAD
   # diff
   di = diff
   dic = diff --cached
   wdiff = diff --color-words
   w  = whatchanged -p
   changes = diff --name-status -r
   staged = diff --cached
   unstaged = diff
   both = diff HEAD
   # summary of what you're going to push
   ps = log --pretty=oneline origin..master
   # changes since we last did a push
   wo = whatchanged -p origin..
   # info
   info = remote -v
   authors = "!git log --format='%aN <%aE>' | sort -u"
[diff]
   renames = true
