#!/bin/sh

# Colors
COL_R="\\033[31m"
COL_G="\\033[32m"
COL_Y="\\033[33m"
ENDC="\\033[0m"

# List outdated packages
pip list -o --exclude-editable

echo -en "\n${COL_Y}Upgrade ? [Y/n]${ENDC}"
read answer
[[ $answer = "n" ]] && exit

# Update all
pip list --outdated --format=freeze --exclude-editable | \
    cut -d = -f 1 | xargs -n1 pip install -U
echo -e "\n${COL_G}DONE ${ENDC}"
