#!/bin/sh

dpath=$HOME/lib/dotfiles

cd $dpath
for l in $(git submodule status | cut -d ' ' -f 3)
do
    echo "======================"
    echo ":: Updating $l"
    echo "======================"
    cd $dpath/$l
    git checkout master
    git pull
done

cd $dpath
git submodule status
git submodule summary

exit 0
