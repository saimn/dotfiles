auto-reload yes
suppress-first-reload yes
reload-time 60
reload-threads 3

browser "firefox %u"

error-log "~/.newsbeuter/error.log"
save-path "~/.newsbeuter/saved"

feed-sort-order firsttag
prepopulate-query-feeds yes

macro o open-in-browser ; toggle-article-read "read"
macro i set browser "feh %u"; open ; set browser "w3m %u"
#macro f set browser "firefox -remote \"openurl(%u,new-tab)\""
macro f set browser "firefox %u"
macro m set browser "midori %u &"
macro w set browser "w3m %u"

feedlist-format "%4i %n %11u %t %> %T"
#articlelist-format "%4i %f %D %6L  %?T?|%-17T|  &?%t"
#notify-format "newsbeuter: %d new articles (%n unread articles, %f unread feeds)"
#notify-format "newsbeuter: finished reload, %f unread feeds (%n unread articles total)"

# highlight <target> <regex> <fgcolor> [<bgcolor> [<attribute> ...]]
# highlight all "newsbeuter" red
highlight article "^(Author|Link(s)?|Date|Podcast Download URL):" default default bold underline
highlight article "^Feed: .*" cyan default
highlight article "^Title: .*" red default bold
highlight feedlist "https?://[^ ]+" yellow red bold

#show-read-feeds no
#show-read-articles no

#ignore-article "*" "title =~ \"newsbeuter\""
ignore-article "http://bbs.archlinux.org/extern.php?action=active&type=RSS" "title =~ \"KDE\""

#define-filter "all feeds with linux tag" "tags # \"linux\""

#include "~/.newsbeuter/colorschemes/simple"
color listnormal white black
color listfocus  black blue bold
color info       black blue bold
color background white black
color article    white black

unbind-key j
unbind-key k
bind-key k up
bind-key j down

